        <template id="report_saleorder_document_with_cp_main">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="custom_zimmer.report_saleorder_document_with_cp" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
        
        <template id="report_saleorder_document_with_pelunasan_main">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="custom_zimmer.report_saleorder_document_with_pelunasan" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
        
