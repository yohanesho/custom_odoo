        <report 
            id="saleorder_document_with_cp"
            model="sale.order"
            string="Quotation / Order with CP"
            report_type="qweb-pdf"
            name="custom_zimmer.report_saleorder_document_with_cp_main"
            file="custom_zimmer.report_saleorder_document_with_cp"
            attachment_use="False"
        />

        <report 
            id="saleorder_document_with_pelunasan"
            model="sale.order"
            string="Quotation / Order with Pelunasan"
            report_type="qweb-pdf"
            name="custom_zimmer.report_saleorder_document_with_pelunasan_main"
            file="custom_zimmer.report_saleorder_document_with_pelunasan"
            attachment_use="False"
        />

        <report 
            id="saleorder_document_proforma_invoice"
            model="sale.order"
            string="Proforma Invoice"
