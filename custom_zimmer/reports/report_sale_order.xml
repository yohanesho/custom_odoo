<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@class='page']" position="replace">
                <div class="page">
                    <div class="row" style="padding-bottom: 20px; margin-left:0px; margin-right:0px; background: #E9F6E9;">
                        <div class="col-xs-12" style="padding: 0px;">
                            <div class="col-xs-7" style="width: 59.9%; border-bottom: 20px solid darkred;border-left: 0px solid transparent;border-right: 20px solid transparent;"/>
                            <div class="col-xs-5 pull-right" style="width: 41.9%;border-top: 20px solid darkgreen;border-right: 0px solid transparent;border-left: 20px solid transparent;position: absolute;margin-left: 58.1%;"/>
                            <div class="col-xs-5" style="width: 40.7%; margin-top:15px; border-top: 3px solid #E9F6E9;border-right: 0px solid transparent;border-left: 3px solid transparent;position: absolute;margin-left: 59.3%;"/>
                        </div>
                        <div class="col-xs-12 text-center">
                            <h1>
                                <span t-if="doc.state == 'draft'">Sales Quotation</span>
                                <span t-if="doc.state == 'sale'">Sales Order</span>
                            </h1>
                        </div>
                        <div class="col-xs-6" style="margin-top: 5px">
                            <div t-if="doc.partner_shipping_id == doc.partner_invoice_id">
                                <strong>Invoicing and shipping address:</strong>
                                <div t-field="doc.partner_invoice_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                            </div>
                            <div t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                                <strong>Invoice address:</strong>
                                <div t-field="doc.partner_invoice_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                                <strong>Shipping address:</strong>
                                <div t-field="doc.partner_shipping_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                            </div>
                        </div>
                        <div class="col-xs-5 pull-right">
                            <table class="table-condensed" style="width:100%; border:1px solid black">
                                <thead>
                                    <tr style="background-color:darkgreen;color:white;">
                                        <th class="text-left" colspan="2">
                                            <span t-field="doc.name" />
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong>Order Date</strong>
                                        </td>
                                        <td>
                                            <span>: </span>
                                            <span t-field="doc.date_order" t-field-options='{"format": "dd/MM/yyyy"}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Salesperson</strong>
                                        </td>
                                        <td>
                                            <span>: </span>
                                            <span t-field="doc.user_id" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Expiration Date</strong>
                                        </td>
                                        <td>
                                            <span>: </span>
                                            <span t-field="doc.validity_date" t-field-options='{"format": "dd/MM/yyyy"}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div name="payment_term" t-if="False" class="col-xs-3">
                    </div>
                    <div class="row mt32 mb32" id="informations" t-if="False">
                        <div t-if="doc.client_order_ref" class="col-xs-3">
                            <strong>Your Reference:</strong>
                            <p t-field="doc.client_order_ref"/>
                        </div>
                        <div t-if="doc.date_order" class="col-xs-3">
                            <strong t-if="doc.state not in ['draft','sent']">Date Ordered:</strong>
                            <strong t-if="doc.state in ['draft','sent']">Quotation Date:</strong>
                            <p t-field="doc.date_order" />
                        </div>
                        <div t-if="doc.user_id.name" class="col-xs-3">
                            <strong>Salesperson:</strong>
                            <p t-field="doc.user_id"/>
                        </div>
                        <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                            <strong>Payment Terms:</strong>
                            <p t-field="doc.payment_term_id"/>
                        </div>
                    </div>
                    <p id="fiscal_position_remark" t-if="False">
                        <strong>Fiscal Position Remark:</strong>
                        <span t-field="doc.fiscal_position_id.note"/>
                    </p>

                    <t t-foreach="doc.order_lines_layouted()" t-as="page">
                        <table class="table-condensed" style="margin-top: 8px; margin-bottom: 8px;">
                            <thead>
                                <tr style="background-color:darkgreen;color:white;">
                                    <th style="width: 50%; border: 1px black solid;">Description</th>
                                    <th style="width: 10%; border: 1px black solid;">Picture</th>
                                    <th class="text-right" style="width: 10%; border: 1px black solid;">Quantity</th>
                                    <th class="text-right" style="width: 15%; border: 1px black solid;">Unit Price</th>
                                    <th class="text-right price_tax_included" style="width: 15%; border: 1px black solid;">Total Price</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="total_price" t-value="0"/>
                                <t t-foreach="page" t-as="layout_category">
                                    <t t-foreach="layout_category['lines']" t-as="l">
                                        <tr t-if="not l.product_id.product_tmpl_id.for_deposit" style="vertical-align: top;">
                                            <td style="border-left: 1px solid black; border-right: 1px solid black; vertical-align: top;"><span t-field="l.name"/></td>
                                            <td style="border-left: 1px solid black; border-right: 1px solid black; vertical-align: top"><span t-if="l.product_id.image_medium" t-field="l.product_id.image_medium"
                                                t-field-options='{"widget": "image", "class": "img-rounded"}' style="max-height: 25px" /></td>
                                            <td class="text-right" style="border-left: 1px solid black; border-right: 1px solid black; vertical-align: top">
                                                <span t-field="l.product_uom_qty"/>
                                                <span t-field="l.product_uom" groups="product.group_uom"/>
                                            </td>
                                            <td class="text-right" style="border-left: 1px solid black; border-right: 1px solid black; vertical-align: top">
                                                <span t-field="l.price_unit"
                                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                            </td>
                                            <td class="text-right" style="border-left: 1px solid black; border-right: 1px solid black; vertical-align: top">
                                                <t t-set="price_subtotal" t-value="l.product_uom_qty * l.price_unit"/>
                                                <t t-set="total_price" t-value="total_price + price_subtotal"/>
                                                <span t-esc="price_subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t>
                                        <tr style="border-top: 1px solid black;">
                                            <td colspan="5">
                                                <div class="pull-right" style="width: 40%">
                                                    <table name="footer-info" class="table-condensed" style="width: 100%">
                                                        <tr>
                                                            <td>Subtotal</td>
                                                            <td class="text-right">: </td>
                                                            <td class="text-right">
                                                                <span t-esc="total_price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                                            </td>
                                                        </tr>
                                                        <tr style="border-top: 1px black solid">
                                                            <td>
                                                                <span>Special Discount</span>
                                                                <span t-if="doc.discount_type == 'percent' and doc.discount_rate > 0">
                                                                    (<span t-field="doc.discount_rate" />%)
                                                                </span>
                                                            </td>
                                                            <td class="text-right">: </td>
                                                            <td class="text-right">
                                                                <t t-set="special_discount" t-value="doc.amount_discount * -1"/>
                                                                <span t-esc="special_discount" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                                            </td>
                                                        </tr>
                                                        <tr style="border-top: 1px black solid">
                                                            <td>Tax</td>
                                                            <td class="text-right">: </td>
                                                            <td class="text-right">
                                                                <t t-set="tax" t-value="doc.amount_tax"/>
                                                                <span t-esc="tax" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                                            </td>
                                                        </tr>
                                                        <tr style="border-top: 1px black solid; text-weight: bold;">
                                                            <td>Grand Total</td>
                                                            <td class="text-right">: </td>
                                                            <td class="text-right">
                                                                <t t-set="grand_total" t-value="doc.amount_total"/>
                                                                <span t-esc="grand_total" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                            <p style="page-break-before:always;"> </p>
                        </t>
                    </t>

                    <div class="row">
                        <div class="col-xs-6 pull-right">
                            <div>
                                <div style="height: 72px;"/>
                                <div class="text-center">
                                    <strong style="border-top: 1px black solid; padding-left: 10px; padding-right: 10px;">Evan Hiumawan, B.Sc.</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div style="position:absolute;top:850px; page-break-inside: avoid;">
                        <p style="margin-bottom: 16px; font-size: 11px">
                            <span style="font-weight: bold;">Pembayaran CP </span><span>wajib dilakukan </span><span style="font-weight: bold;">Sebelum Produksi </span><span>dan </span><span style="font-weight: bold;">Pelunasan </span><span>wajib dilakukan </span><span style="font-weight: bold;">Sebelum Pengiriman</span><br/>
                            <span style="margin-left: 8px">-</span><span style="margin-left: 4px">Jika melalui </span><span style="font-weight: bold; color: red;">TRANSFER, </span><span style="font-weight: bold;">HANYA </span><span>ke rekening dibawah ini:</span><br/>
                            <span style="margin-left: 15px">BCA Cabang Ruko Artha Gading: Atas Nama: </span><span style="font-weight: bold">SHIRLEY STEPHANIE </span><span>: No Acc: 84000 92835</span><br/>
                            <span style="margin-left: 15px">Bank Mandiri Cabang Graha Rekso: Atas Nama: </span><span style="font-weight: bold">EVAN HIUMAWAN </span><span>: No Acc: 165000 90 99988</span><br/>
                            <span style="margin-left: 8px">-</span><span style="margin-left: 4px">Jika melalui </span><span style="font-weight: bold; color: red;">CASH, </span><span>atau yang lainnya, </span><span style="font-weight: bold; color: red;">WAJIB </span><span>menghubungi via WA ke </span><span style="font-weight: bold; color: red;">Bp. Evan/Ibu Shirley </span><span>di nomor telepon: 083 88888 149 / 0813 833 47343.</span><br/>
                            <span style="margin-left: 8px">-</span><span style="margin-left: 4px">Setiap barang pesanan yang sudah diinformasikan selesai produksi wajib dilakukan pelunasan. Namun jika belum melakukan pelunasan, maka akan dikenakan biaya pengiriman sebesar 1%</span><br/><span style="margin-left: 15px">per bulan dari total faktur penjualan.</span><br/>
                            <span style="margin-left: 8px">-</span><span style="margin-left: 4px">Barang akan dikirim setelah ada bukti transfer dan uang dinyatakan telah masuk oleh pihak Bank terkait.</span><br/>
                        </p> 
                    </div>
                </div>
            </xpath>
        </template>

        <record id="report.paperformat_euro" model="report.paperformat">
            <field name="margin_top">45</field>
            <field name="header_spacing">40</field>
        </record>

