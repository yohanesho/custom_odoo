<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="sale.mail_template_data_notification_email_sale_order" model="mail.template">
            <field name="name">Sale Order Notification Email</field>
            <field name="subject">${object.subject}</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[<html>
                <head></head>
                % set record = ctx.get('record')
                % set company = record and record.company_id or user.company_id
                <body style="margin: 0; padding: 0;">
                <table border="0" width="100%" cellpadding="0" bgcolor="white" style="padding: 20px; background-color: white; border-collapse:separate;" summary="o_mail_notification">
                    <tbody>
                      <!-- HEADER -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#bcbbbb" style="min-width: 590px; background-color: #bcbbbb; border-collapse:separate;">
                            <tr>
                                <td colspan="2" style="height: 40px; background-color: #0e6031; vertical-align: top"/>
                            </tr>
                            <tr>
                              <td valign="middle" style="padding-top:8px; padding-left:20px; padding-right:20px; padding-bottom:20px">
                                  <span style="font-size:20px; color:white; font-weight: bold;">
                                      <span style="color=black;font-size: 18px; font-weight:bold">
                                        ${record.state in ('draft', 'sent') and 'Quotation' or 'Order'}
                                        <br/>${record.name}
                                        <br/>${record.client_order_ref}
                                    </span>
                                  </span>
                              </td>
                              <td valign="middle" align="right">
                                  <img src="/logo.png?company=${company.id}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${company.name}">
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>

                      <!-- CONTENT -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#dbdbda" style="min-width: 590px; background-color: #dbdbda; padding: 20px; border-collapse:separate;">
                            <tbody>
                              <td valign="top" style="font-family:Arial,Helvetica,sans-serif; font-size: 14px;">
                                ${object.body | safe}
                              </td>
                            </tbody>
                          </table>
                        </td>
                      </tr>

                      <!-- FOOTER -->
                      <tr>
                        <td align="center" style="min-width: 590px;">
                          <table width="590" border="0" cellpadding="0" bgcolor="#0e6031" style="min-width: 590px; background-color: #0e6031; padding: 20px; border-collapse:separate;">
                            <tr>
                              <td align="center">
                                <a href="http://zimmer-rattan.com/" target="_blank">www.Zimmer-Rattan.com</a>.
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </tbody>
                </table>
                </body>
                </html>
            ]]></field>
        </record>

        <record id="sale.email_template_edi_sale" model="mail.template">
            <field name="name">Sales Order - Send by Email</field>
            <field name="email_from">${(object.user_id.email and '%s &lt;%s&gt;' % (object.user_id.name, object.user_id.email) or '')|safe}</field>
            <field name="subject">${object.company_id.name} ${object.state in ('draft', 'sent') and 'Quotation' or 'Order'} (Ref ${object.name or 'n/a' })</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="report_sale_order"/>
            <field name="report_name">${(object.name or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
