<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale.mail_template_data_notification_email_sale_order" model="mail.template">
        <field name="body_html"><![CDATA[<html>
            <head></head>
            % set record = ctx.get('record')
            % set company = record and record.company_id or user.company_id
            <body style="margin: 0; padding: 0;">
            <table border="0" width="100%" cellpadding="0" bgcolor="white" style="padding: 20px; background-color: white; border-collapse:separate;" summary="o_mail_notification">
                <tbody>
                  <!-- HEADER -->
                  <tr>
                    <td align="center" style="min-width: 590px;">
                      <table width="590px">
                        <tr>
                            <td colspan="2" style="height: 16px; background-color: darkred; vertical-align: top"/>
                        </tr>
                        <tr>
                          <td valign="middle" style="padding-top:8px; padding-left:20px; padding-right:20px; padding-bottom:20px">
                            <img src="/logo.png?company=${company.id}" style="padding: 0px; margin: 0px; height: auto; width: 120px;" alt="${company.name}">
                          </td>
                          <td valign="middle" align="right">
                            <p style="font-size: 12px">
                                <span style="font-weight: bold; font-size: 12px;">${company.name}</span><br/>
                                <span>${company.street}</span><br/>
                                <span>${company.street2}</span><br/>
                                <span>${company.city} </span><span>${company.state_id} - </span><span>${company.zip}</span><br/>
                                <span>${company.country_id}</span><br/>
                                <span>Phone: </span><span>${company.phone} / </span><span>${company.fax}</span><br/>
                                <span>Website: </span><span>${company.website}</span>
                            </p>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                  

                  <!-- CONTENT -->
                  <tr>
                    <td align="center" valign="top" style="font-family:Arial,Helvetica,sans-serif; font-size: 14px; padding-left: 20px; padding-right: 20px; padding-bottom: 20px;">
                      <div style="padding: 0px; width: 590px;">
                          <div style="width: 405px;border-bottom: 20px solid darkred;border-left: 0px solid transparent;border-right: 20px solid transparent;position: absolute;"></div>
                          <div style="float: right !important;width: 200px;border-top: 20px solid darkgreen;border-right: 0px solid transparent;border-left: 20px solid transparent;position: absolute;margin-left: 390px;"></div>
                          <div style="margin-bottom: 20px; float: right !important;width: 186px;margin-top:15px;border-top: 3px solid #E9F6E9;border-right: 0px solid transparent;border-left: 3px solid transparent;position: absolute;margin-left: 404px;"></div>
                          <div style="text-align: left; padding-top:20px">
                            ${object.body | safe}
                          </div>
                      </div>
                    </td>
                  </tr>

                  <!-- FOOTER -->
                  <tr>
                    <td align="center" style="min-width: 590px;">
                      <div style="width: 590px; text-align: left;">
                        <div style="width: 58.3333%;border-bottom: 8px solid darkgreen; border-left: 0px solid transparent; border-right: 8px solid transparent;"/>
                        <div style="width: 83.3333%; margin-top:4px; border-bottom: 10px solid darkgreen; border-left: 0px solid transparent; border-right: 10px solid transparent;"/>
                        <div style="width: 100%; margin-top:4px; height: 20px; background-image: none; background-color: darkred;"/>
                      </div>
                    </td>
                  </tr>
                </tbody>
            </table>
            </body>
            </html>
        ]]></field>
    </record>

