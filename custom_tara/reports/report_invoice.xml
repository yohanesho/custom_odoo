<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_invoice_inherit" inherit_id="account.report_invoice">
        <xpath expr="//t[@t-call='account.report_invoice_document']" position="attributes">
            <attribute name="t-call">custom_tara.report_invoice_document2</attribute>
        </xpath>
    </template>

    <template id="report_invoice_document2">
        <t t-call="report.external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <div class="page">
                <div class="row">
                    <div class="col-xs-6">
                        <strong>Kepada Yth:</strong>
                        <address t-field="o.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                        <span t-if="o.partner_id.npwp" t-field="o.partner_id.npwp"/>
                    </div>
                    <div class="col-xs-6">
                        <h2>
                            <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice #</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA #</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice #</span>
                            <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice #</span>
                            <span t-if="o.type == 'out_refund'">Refund #</span>
                            <span t-if="o.type == 'in_refund'">Vendor Refund #</span>
                            <span t-if="o.type == 'in_invoice'">Vendor Bill #</span>
                            <span t-field="o.number"/>
                        </h2>
                        <div class="col-xs-4" t-if="o.date_invoice" style="padding-left: 0">
                            <strong>Tanggal:</strong>
                            <p t-field="o.date_invoice" t-field-options='{"format": "d-MMM-y"}'/>
                        </div>
                        <div class="col-xs-4" t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')" style="padding-left: 0">
                            <strong>Jatuh Tempo:</strong>
                            <p t-field="o.date_due" t-field-options='{"format": "d-MMM-y"}'/>
                        </div>
                        <div class="col-xs-4" t-if="o.efaktur_id" style="padding-left: 0">
                            <strong>No. Faktur Pajak:</strong>
                            <p t-field="o.efaktur_id"/>
                        </div>
                        <div name="origin" class="col-xs-4" t-if="o.origin" style="padding-left: 0">
                            <strong>Sales Order:</strong>
                            <p t-field="o.origin"/>
                        </div>
                        <div class="col-xs-4" t-if="o.partner_id.ref" style="padding-left: 0">
                            <strong>Customer Ref:</strong>
                            <p t-field="o.name"/>
                        </div>
                        <div class="col-xs-5" style="padding-left: 0" t-if="o.picking_ids">
                            <strong>Surat Jalan:</strong>
                            <p t-esc="', '.join(map(lambda x: x.name, o.picking_ids))"/>
                        </div>
                    </div>
                </div>

                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                <table class="table table-condensed" style="margin-top:16px">
                    <t t-set="total_qty_sold" t-value="0"/>
                    <thead>
                        <tr style="border-top: 1px solid black;">
                            <th>Kode Barang</th>
                            <th>Description</th>
                            <th class="text-center">Jumlah</th>
                            <th class="text-center">Piece</th>
                            <th class="text-right">Harga Satuan</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tr>
                        <t t-foreach="o.invoice_line_ids" t-as="l">
                            <tr t-if="l.product_id.type != 'service'">
                                <td><span t-field="l.product_id.default_code"/></td> 
                                <td><span t-field="l.product_id.name"/></td>
                                <td class="text-center">
                                    <span t-foreach="l.stock_move_ids" t-as="linked_move">
                                        <span t-field="linked_move.product_uom_qty"></span>
                                        <span t-field="linked_move.product_uom"></span>
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span t-field="l.quantity"/>
                                    <span t-field="l.uom_id"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_unit" 
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l.quantity * l.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                                <t t-set="total_qty_sold" t-value="total_qty_sold + l['quantity']"/>
                            </tr>
                        </t>
                    </tr>
                    <tr style="font-weight:bold;border-top: 1px solid black; border-bottom: 1px solid black;">
                        <td colspan="3">
                        </td>
                        <td class="text-center"><span t-esc="'{:,.0f}'.format(total_qty_sold)"></span></td>
                        <td class="text-right"></td>
                        <td class="text-right"></td>
                    </tr>
                </table>

                <div class="row" style="margin-top:16px">
                    <div>
                        <div class="col-xs-6 pull-left">
                            <span style="text-weight: bold;">Terbilang: </span>
                            <span t-field="o.amount_text"/>
                        </div>
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr>
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}">
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>DownPayment</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_downpayment" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}">
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Discount</strong></td>
                                    <td class="text-right">
                                        <span 
                                            t-field="o.amount_discount_total" 
                                            t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}">
                                        </span>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>DPP</strong></td>
                                    <td class="text-right">
                                        <span 
                                            t-field="o.amount_untaxed" 
                                            t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}">
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>PPN</strong></td>
                                    <td class="text-right">
                                        <span 
                                            t-field="o.amount_tax" 
                                            t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}">
                                        </span>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>TOTAL</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row" style="border-top:1px solid black;">
                    <div class="col-xs-6 pull-left">
                        <strong t-field="o.payment_terms"/>
                    </div>
                    <div class="col-xs-4 pull-right">
                        <div class="text-center">
                            <strong t-field="o.company_id.city"/>
                            <strong>, </strong>
                            <strong t-field="o.date_invoice" t-field-options='{"format": "d-MMMM-y"}'/>
                        </div>
                        <div class="text-center" style="margin-top:64px">
                            <strong t-field="o.approval_user_id"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer">
                <div class="text-center">
                    <div class="col-xs-6 pull-left text-left">
                        <div>
                            <span>Invoice No: </span>
                            <span t-field="o.number"/>
                        </div>
                        <span> 
                            <span>Original Copy: Customer, 2. Copy: Accounting, 3. Copy: Finance, 4. Copy: Marketing</span>
                        </span>
                    </div>
                    <div class="col-xs-4 col-xs-offset-1 text-right">
                        <span>
                            <span>Page:</span>
                            <span class="page"></span>
                            <span>/ </span>
                            <span class="topage"></span>
                        </span>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
