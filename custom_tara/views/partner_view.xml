<odoo>
  <data>
        <record model="ir.ui.view" id="partner_address_view">
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="name">Partner Address</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <xpath expr="///div[@class='o_address_format']" position="replace">
                <notebook>
                    <page string="Invoice" autofocus="autofocus">
                        <div class="o_address_format">
                            <div class="oe_edit_only">
                                <button name="open_parent" type="object" string="(edit)" class="oe_link" attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
                            </div>
                            <field name="street" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            <field name="city" placeholder="City" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}"/>
                            <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                        </div>    
                    </page>
                    <page string="Delivery">
                        <div class="o_address_format">
                            <field name="delivery_street" placeholder="Street..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            <field name="delivery_street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            <field name="delivery_city" placeholder="City" class="o_address_city" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            <field name="delivery_state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}"/>
                            <field name="delivery_zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            <field name="delivery_country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                        </div>    
                    </page>
                </notebook>
            </xpath>
        </field>
        </record>

        <record model="ir.ui.view" id="partner_view_inherit">
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="name">Partner Credit Limit</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <field name="credit" position="after">
                <field name="credit_limit"/>
            </field>
        </field>
        </record>
    
        <record model="ir.ui.view" id="partner_view_kanban_inherit">
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="name">Partner Credit Limit Kanban</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <data>
                    <field name='display_name' position="before">
                        <field name="credit_limit_status"/>
                    </field>
                    <xpath expr="//div[contains(@class, 'oe_kanban_partner_links')]" position="after">
                        <span style="font-weight: bold;color: red;" attrs="{'invisible': [('credit_limit_status','=','open')]}">
                            <field name="credit_limit_status"/>
                        </span>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>