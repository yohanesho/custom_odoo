<odoo>
    <data>
        <record id="stock_view_picking_inherit" model="ir.ui.view">
            <field name="name">Stock Picking Credit Limit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="credit_limit_state" attrs="{'invisible': [('picking_type_code','not in',('outgoing'))]}"/>
                </field>
            </field>
        </record>
        <record id="stock_view_picking_tree_inherit" model="ir.ui.view">
            <field name="name">Stock Picking Tree Credit Limit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree" />
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="picking_type_code" invisible="1" />
                    <field name="credit_limit_state" attrs="{'invisible': [('picking_type_code','not in',('outgoing'))]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>