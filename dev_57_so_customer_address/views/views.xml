<odoo>
  <data>
      <!-- Replace field partner_id in so, therefore customer will shown without address -->
      <!-- After that we will add field to put customer address, we also can change it -->
      <record id="sale.view_order_form_address" model="ir.ui.view">
          <field name="name">sale.view_order_form_address</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_order_form"/>
          <field name="type">form</field>
          <field name="arch" type="xml">
            <field name="partner_id" position="replace">
              <field name="partner_id" domain="[('customer','=',True)]" context="{'search_default_customer':1}" options="{&quot;always_reload&quot;: True}"/>
                <field name="customer_address"></field>              
                <field name="internal_note" placeholder="Internal Note"/>                
            </field>           
          </field>
      </record>

      <!-- Replace field partner_id in inv, therefore customer will shown without address -->
      <!-- After that we will add field to put customer address, we also can change it -->
      <record id="account.invoice_form_address" model="ir.ui.view">
          <field name="name">account.invoice_form_address</field>
          <field name="model">account.invoice</field>
          <field name="inherit_id" ref="account.invoice_form"/>
          <field name="type">form</field>
          <field name="arch" type="xml">
            <field name="partner_id" position="replace">
              <field name="partner_id" domain="[('customer','=',True)]" context="{'search_default_customer':1}" options="{&quot;always_reload&quot;: True}"/>
                <field name="customer_address"></field>              
                <field name="internal_note" placeholder="Internal Note"/>
            </field>           
          </field>
      </record>


  </data>
</odoo>